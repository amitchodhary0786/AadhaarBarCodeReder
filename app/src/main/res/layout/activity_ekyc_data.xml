<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:id="@+id/ll_mainlayout"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#376b9f">

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageEditProfile"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:text="मेरा आधार, मेरी पहचान"
                android:textColor="#fafafa"
                android:textSize="18sp"
                android:typeface="sans"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageEditProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_two"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:padding="1dp">
                <ImageView
                    android:id="@+id/iv_User"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/qrcode"
                    android:padding="5dp"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_above="@+id/tv_aadhaarno"
                android:layout_alignStart="@+id/tv_aadhaarno"
                android:layout_alignLeft="@+id/tv_aadhaarno"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="UUID NO"
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_aadhaarno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_toEndOf="@+id/iv_User"
                android:layout_toRightOf="@+id/iv_User"
                android:text=""
                android:textColor="#000000"
                android:textSize="15dp" />
        </RelativeLayout>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/check"
                android:padding="12dp"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aadhaar Data Verified"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction ID:"
            android:typeface="sans"
            android:textSize="15dp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/tv_aadhaartransactionid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:typeface="sans"
            android:textSize="15dp"
            android:textColor="#000c15"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Identity"
        android:typeface="sans"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Resident Name :"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_aadhaarname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000c15"
                android:layout_weight="2"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DOB :"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_aadhaardob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000c15"
                android:layout_weight="2"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Gender :"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_aadhaargender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000c15"
                android:layout_weight="2"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Phone Number :"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_aadhaarphonenumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-nil-"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000c15"
                android:layout_weight="2"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email Address :"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_aadhaaremail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-nil-"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000c15"
                android:layout_weight="2"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POA"
        android:typeface="sans"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Care of :"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_aadhaarcastof"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000c15"
                android:layout_weight="2"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_aadhaaraddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000c15"
                android:layout_weight="2"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="PinCode :"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_pincode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000c15"
                android:layout_weight="2"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>